@model Ballazza.Models.Venue

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@Styles.Render("~/Content/VenuesCreate.css")

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal venue-create-form">
        <h2 class="form-title">Create a new item</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div  class="fields">
        <div class="form-group">
            @Html.LabelFor(model => model.VenueName, "name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VenueName, new { htmlAttributes = new { @class = "form-control", @placeholder = "e.g. Ballazza melbourne" } })
                @Html.ValidationMessageFor(model => model.VenueName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VenueStreet, "street", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VenueStreet, new { htmlAttributes = new { @class = "form-control", @placeholder = "e.g. 20 Flinders street" } })
                @Html.ValidationMessageFor(model => model.VenueStreet, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VenueSuburb, "suburb", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VenueSuburb, new { htmlAttributes = new { @class = "form-control", @placeholder = "e.g. Huntingdale" } })
                @Html.ValidationMessageFor(model => model.VenueSuburb, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VenueState, "state", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VenueState, new { htmlAttributes = new { @class = "form-control", @placeholder = "e.g. VIC" } })
                @Html.ValidationMessageFor(model => model.VenueState, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VenuePostcode, "post code", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VenuePostcode, new { htmlAttributes = new { @class = "form-control", @type="text", @placeholder = "e.g. 3145" } })
                @Html.ValidationMessageFor(model => model.VenuePostcode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VenuePhoneno, "phone", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VenuePhoneno, new { htmlAttributes = new { @class = "form-control", @placeholder = "e.g. +61745637999" } })
                @Html.ValidationMessageFor(model => model.VenuePhoneno, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default create-button" />
            </div>
        </div>
     </div>
    </div>
}

