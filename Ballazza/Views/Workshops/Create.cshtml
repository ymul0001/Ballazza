@model Ballazza.Models.Workshop

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/WorkshopCreate.css")
@Styles.Render("https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal workshop-create-form">
        <h2 class="form-title">Create a new item</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="fields">
            <div class="form-group">
                @Html.LabelFor(model => model.WorkshopAgeGroup, "Age", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.WorkshopAgeGroup, new { htmlAttributes = new { @class = "form-control", placeholder = "Kids, Teens, or Pro" } })
                    @Html.ValidationMessageFor(model => model.WorkshopAgeGroup, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.WorkshopStartDate, "Start", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.WorkshopStartDate, new { htmlAttributes = new { @class = "form-control datepicker-1", placeholder = "dd/MM/yyyy" } })
                    @Html.ValidationMessageFor(model => model.WorkshopStartDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.WorkshopEndDate, "end", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.WorkshopEndDate, new { htmlAttributes = new { @class = "form-control datepicker-2", placeholder = "dd/MM/yyyy" } })
                    @Html.ValidationMessageFor(model => model.WorkshopEndDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.WorkshopQuota, "quota", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.WorkshopQuota, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.WorkshopQuota, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.VenueId, "venue", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("VenueId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.VenueId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default create-button" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/datepickerHandler.js")
}
